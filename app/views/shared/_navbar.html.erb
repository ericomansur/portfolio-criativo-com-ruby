<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid px-3">
    <a class="navbar-brand" href="/">
      <i class="fas fa-palette me-2"></i>Portfolio
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarContent">
      <ul class="navbar-nav ms-auto align-items-lg-center">

        <li class="nav-item me-lg-3 mb-2 mb-lg-0">
          <%= link_to public_feed_path, class: "nav-link text-white" do %>
            <i class="fas fa-compass me-1"></i> Explorar
          <% end %>
        </li>

        <li class="nav-item me-lg-3 mb-2 mb-lg-0">
          <%= link_to ranking_path, class: "nav-link text-white" do %>
            <i class="fas fa-trophy me-1"></i> Ranking
          <% end %>
        </li>

        <li class="nav-item me-lg-3 mb-3 mb-lg-0">
          <%= form_with url: search_path, method: :get, local: true, class: "d-flex search-form" do %>
            <div class="input-group">
              <span class="input-group-text bg-transparent border-end-0">
                <i class="fas fa-search text-white"></i>
              </span>
              <input type="text" name="q" class="form-control border-start-0" placeholder="Buscar">
            </div>
          <% end %>
        </li>

        <% if user_signed_in? %>
          <% unread = current_user.notifications.where(read: false).count %>

          <li class="nav-item me-lg-3 mb-2 mb-lg-0">
            <%= link_to notifications_path, class: "nav-link position-relative text-white" do %>
              <i class="fas fa-bell"></i>
              <% if unread > 0 %>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                  <%= unread %>
                </span>
              <% end %>
            <% end %>
          </li>

          <li class="nav-item me-lg-3 mb-2 mb-lg-0">
            <%= link_to projects_path, class: "nav-link text-white" do %>
              <i class="fas fa-folder me-1"></i> Meus Projetos
            <% end %>
          </li>

          <li class="nav-item d-flex align-items-center me-lg-3 mb-2 mb-lg-0">
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar, class: "rounded-circle me-2", width: 36, height: 36 %>
            <% else %>
              <i class="fas fa-user-circle fs-3 me-2 text-white"></i>
            <% end %>

            <%= link_to "@#{current_user.username}",
                public_profile_path(username: current_user.username),
                class: "text-white text-decoration-none" %>
          </li>

          <li class="nav-item mb-2 mb-lg-0">
            <%= button_to destroy_user_session_path, method: :delete, class: "btn btn-outline-danger btn-sm w-100 w-lg-auto" do %>
              <i class="fas fa-sign-out-alt me-1"></i> Sair
            <% end %>
          </li>

        <% else %>
          <li class="nav-item me-lg-2 mb-2 mb-lg-0">
            <%= link_to new_user_session_path, class: "btn btn-outline-light btn-sm w-100 w-lg-auto" do %>
              <i class="fas fa-sign-in-alt me-1"></i> Entrar
            <% end %>
          </li>

          <li class="nav-item mb-2 mb-lg-0">
            <%= link_to new_user_registration_path, class: "btn btn-primary btn-sm w-100 w-lg-auto" do %>
              <i class="fas fa-user-plus me-1"></i> Cadastrar
            <% end %>
          </li>
        <% end %>

      </ul>
    </div>
  </div>
</nav>