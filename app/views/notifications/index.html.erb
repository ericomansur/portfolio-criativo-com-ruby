<h2>Notificações</h2>

<%= button_to "Marcar todas como lidas",
    mark_all_as_read_notifications_path,
    method: :patch,
    data: { turbo_confirm: "Marcar todas como lidas?" },
    class: "btn btn-sm btn-outline-secondary mb-3" %>

<div id="notifications">
  <% @notifications.each do |notification| %>
    <div class="mb-2 <%= "fw-bold" unless notification.read %>">
      <%= notification.actor.username %>
      <% if notification.action == "liked" %>
        curtiu seu projeto
      <% elsif notification.action == "commented" %>
        comentou no seu projeto
      <% end %>
      • <small><%= time_ago_in_words(notification.created_at) %> atrás</small>
    </div>
  <% end %>
</div>
