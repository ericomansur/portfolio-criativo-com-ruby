<h2 class="mb-4">Cadastrar</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :bio %>
    <%= f.text_area :bio, class: "form-control", rows: 3 %>
  </div>

  <div class="mb-3">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <small class="text-muted d-block mb-1">
        (<%= @minimum_password_length %> caracteres mÃ­nimos)
      </small>
    <% end %>
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", required: true %>
  </div>

  <div class="d-grid">
    <%= f.submit "Cadastrar", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="mt-3">
  <%= render "devise/shared/links" %>
</div>

