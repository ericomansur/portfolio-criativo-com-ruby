<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <i class="fas fa-palette auth-icon"></i>
      <h2>Entrar no Portfolio</h2>
      <p class="text-muted">Acesse sua conta e compartilhe seus projetos</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'auth-form' }) do |f| %>
      
      <div class="form-group mb-4">
        <%= f.label :email, class: "form-label" %>
        <div class="input-with-icon">
          <i class="fas fa-envelope"></i>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "seu@email.com" %>
        </div>
      </div>

      <div class="form-group mb-4">
        <%= f.label :password, "Senha", class: "form-label" %>
        <div class="input-with-icon">
          <i class="fas fa-lock"></i>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "••••••••" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-4">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, "Lembrar de mim", class: "form-check-label" %>
        </div>
      <% end %>

      <div class="d-grid mb-4">
        <%= f.submit "Entrar", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<style>
.auth-container {
  min-height: 70vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem 1rem;
}

.auth-card {
  background: white;
  border-radius: 24px;
  padding: 3rem;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
  max-width: 480px;
  width: 100%;
  animation: fadeInUp 0.6s ease-out;
}

.auth-header {
  text-align: center;
  margin-bottom: 2.5rem;
}

.auth-icon {
  font-size: 3.5rem;
  background: linear-gradient(135deg, #6366f1 0%, #ec4899 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 1rem;
}

.auth-header h2 {
  font-size: 1.75rem;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 0.5rem;
}

.auth-form {
  width: 100%;
}

.input-with-icon {
  position: relative;
}

.input-with-icon i {
  position: absolute;
  left: 1rem;
  top: 50%;
  transform: translateY(-50%);
  color: #64748b;
  z-index: 2;
}

.input-with-icon .form-control {
  padding-left: 3rem;
}

.auth-links {
  text-align: center;
  padding-top: 1.5rem;
  border-top: 1px solid #e2e8f0;
}

.auth-links a {
  color: #6366f1;
  text-decoration: none;
  font-weight: 500;
  transition: all 0.3s ease;
  display: inline-block;
  margin: 0.25rem 0.5rem;
}

.auth-links a:hover {
  color: #4f46e5;
  transform: translateX(3px);
}

@media (max-width: 576px) {
  .auth-card {
    padding: 2rem 1.5rem;
  }
}
</style>