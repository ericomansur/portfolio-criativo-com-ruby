<div class="container">
  <h2>Seu Feed Personalizado</h2>
  <p class="text-muted">Projetos das pessoas que você segue</p>

  <div class="mb-3">
    <%= link_to "Explorar todos os projetos", public_feed_path, class: "btn btn-outline-primary" %>
  </div>

  <% if @projects.any? %>
    <div class="projects-grid">
      <% @projects.each do |project| %>
        <div class="project-card-wrapper">
          <div class="card h-100">

            <% if project.image.attached? %>
              <%= image_tag project.image, class: "card-img-top" %>
            <% end %>

            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= project.title %></h5>

              <p class="card-text text-muted">
                <%= truncate(project.description, length: 90) %>
              </p>

              <div class="mt-auto">

                <div class="d-flex justify-content-between align-items-center mb-2">
                  <small>
                    por
                    <%= link_to "@#{project.user.username}",
                        public_profile_path(username: project.user.username) %>
                  </small>

                  <%= render "projects/like_button", project: project %>
                </div>

                <!-- Seção de comentários -->
                <div class="mt-2">
                  <% if project.comments_count.to_i > 0 %>
                    <a href="#" class="text-decoration-none" data-bs-toggle="modal" data-bs-target="#commentsModal<%= project.id %>">
                      <strong>Comentários (<%= project.comments_count %>)</strong>
                    </a>
                  <% else %>
                    <strong>Comentários (0)</strong>
                  <% end %>

                  <% if user_signed_in? %>
                    <%= render "comments/form", project: project %>
                  <% end %>
                </div>

              </div>
            </div>

          </div>
        </div>

        <!-- Modal de Comentários -->
        <%= render "comments/modal", project: project %>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <h5>Seu feed está vazio!</h5>
      <p>Você ainda não segue ninguém ou as pessoas que você segue não publicaram projetos ainda.</p>
      <%= link_to "Explorar projetos públicos", public_feed_path, class: "btn btn-primary mt-2" %>
    </div>
  <% end %>
</div>

<style>
.projects-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1.5rem;
  margin-top: 1.5rem;
}

.project-card-wrapper {
  display: flex;
}

.project-card-wrapper .card {
  width: 100%;
}
</style>