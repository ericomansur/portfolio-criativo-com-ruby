<h2>Explorar Projetos</h2>

<div class="row">
  <% @projects.each do |project| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <% if project.image.attached? %>
          <%= image_tag project.image, class: "card-img-top" %>
        <% end %>

        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= project.title %></h5>

          <p class="card-text text-muted">
            <%= truncate(project.description, length: 90) %>
          </p>

          <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <small>
                por
                <%= link_to "@#{project.user.username}",
                    public_profile_path(username: project.user.username) %>
              </small>

              <% if user_signed_in? %>
                <% if project.likes.exists?(user: current_user) %>
                  <%= button_to "üíî #{project.likes.count}",
                      project_like_path(project),
                      method: :delete,
                      class: "btn btn-sm btn-outline-danger" %>
                <% else %>
                  <%= button_to "‚ù§Ô∏è #{project.likes.count}",
                      project_like_path(project),
                      class: "btn btn-sm btn-outline-secondary" %>
                <% end %>
              <% else %>
                ‚ù§Ô∏è <%= project.likes.count %>
              <% end %>
            </div>

            <div class="mt-2">
              <strong>Coment√°rios</strong>

              <% project.comments.each do |comment| %>
                <div class="border rounded p-2 mt-2">
                  <strong>@<%= comment.user.username %></strong><br>
                  <span><%= comment.body %></span>
                </div>
              <% end %>

              <% if user_signed_in? %>
                <%= form_with model: [project, Comment.new], local: true, class: "mt-2" do |f| %>
                  <%= f.text_area :body,
                      rows: 2,
                      placeholder: "Escreva um coment√°rio...",
                      class: "form-control mb-2" %>
                  <%= f.submit "Comentar", class: "btn btn-sm btn-primary" %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @projects.blank? %>
  <p>Nenhum projeto p√∫blico ainda.</p>
<% end %>
