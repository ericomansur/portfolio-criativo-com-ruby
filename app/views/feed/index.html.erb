<h2>Explorar Projetos</h2>

<div class="projects-grid">
  <% @projects.each do |project| %>
    <div class="project-card-wrapper">
      <div class="card h-100">

        <% if project.image.attached? %>
          <%= image_tag project.image, class: "card-img-top" %>
        <% end %>

        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= project.title %></h5>

          <p class="card-text text-muted">
            <%= truncate(project.description, length: 90) %>
          </p>

          <div class="mt-auto">

            <div class="d-flex justify-content-between align-items-center mb-2">
              <small>
                por
                <%= link_to "@#{project.user.username}",
                    public_profile_path(username: project.user.username) %>
              </small>

              <%= render "projects/like_button", project: project %>
            </div>

            <!-- Seção de comentários atualizada -->
            <div class="mt-2">
              <% if project.comments_count.to_i > 0 %>
                <a href="#" class="text-decoration-none" data-bs-toggle="modal" data-bs-target="#commentsModal<%= project.id %>">
                  <strong>Comentários (<%= project.comments_count %>)</strong>
                </a>
              <% else %>
                <strong>Comentários (0)</strong>
              <% end %>

              <% if user_signed_in? %>
                <%= render "comments/form", project: project %>
              <% end %>
            </div>

          </div>
        </div>

      </div>
    </div>

    <!-- Modal de Comentários -->
    <%= render "comments/modal", project: project %>
  <% end %>
</div>

<% if @projects.blank? %>
  <p>Nenhum projeto público ainda!</p>
<% end %>