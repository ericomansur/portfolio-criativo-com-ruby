<div class="container mt-4">
  <div class="card mx-auto" style="max-width: 800px;">
    <% if @project.image.attached? %>
      <%= image_tag @project.image, class: "card-img-top" %>
    <% end %>

    <div class="card-body">
      <h2><%= @project.title %></h2>
      <p class="text-muted">por @<%= @user.username %></p>

      <hr>

      <p><%= simple_format(@project.description) %></p>

      <%= link_to "Voltar ao perfil", public_profile_path(username: @user.username), class: "btn btn-outline-secondary mt-3" %>
    </div>
  </div>
</div>
