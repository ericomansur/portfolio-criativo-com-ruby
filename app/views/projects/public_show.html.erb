<div class="container">
  <h1><%= @project.title %></h1>

  <% if @project.image.attached? %>
    <%= image_tag @project.image, class: "img-fluid mb-3" %>
  <% end %>

  <p><%= @project.description %></p>

  <p class="text-muted">
    por <%= link_to "@#{@user.username}", public_profile_path(username: @user.username) %>
  </p>
</div>
