<div class="container mt-4">
  <div class="text-center mb-4">
    <h1><%= @project.title %></h1>
    <p class="text-muted">
      por <%= link_to "@#{@project.user.username}", public_profile_path(username: @project.user.username), class: "text-decoration-none" %>
    </p>
  </div>

  <% if @project.image.attached? %>
    <div class="text-center mb-4">
      <%= image_tag @project.image, class: "img-fluid rounded" %>
    </div>
  <% end %>

  <div class="card p-4 mb-4">
    <p><%= simple_format(@project.description) %></p>
  </div>

  <div class="text-center">
    <%= link_to "Voltar ao perfil", public_profile_path(username: @project.user.username), class: "btn btn-outline-primary" %>
  </div>
</div>
