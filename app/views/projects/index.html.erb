<h2>Meus Projetos</h2>

<%= link_to "Novo Projeto", new_project_path, class: "btn btn-success mb-3" %>

<div class="row">
  <% @projects.each do |project| %>
    <div class="col-md-4">
      <div class="card mb-3">
        <% if project.image.attached? %>
          <%= image_tag project.image, class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5><%= project.title %></h5>
          <%= link_to "Editar", edit_project_path(project), class: "btn btn-sm btn-outline-primary" %>
          <%= button_to "Excluir", project_path(project), method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-sm btn-outline-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
